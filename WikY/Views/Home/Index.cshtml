@using WikY.Models

@model List<Article>

@{
    ViewBag.Title = "Page d'accueil";
}

@if (Model.Count > 0)
{
    <h2 class="text-center jumbotron">Articles</h2>
}
else
{
    <h2>Il n'y a pas d'article pour l'instant.</h2>
}

@foreach (Article art in Model)
{
    <hr />
    <h3 class="text-center">@Html.ActionLink(art.Theme, "ReadArticle", "Home", new { myId = art.Id }, null)</h3>
    <p class="text-center">
        <strong>Posté par</strong> @art.Author<br />
        <strong>Le</strong> @art.CreationDate
    </p>
}
