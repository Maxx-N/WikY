@using WikY.Models

@model List<Article>

@{
    ViewBag.Title = "Page d'accueil";
    Article mostRecent = (Article)ViewBag.MostRecent;
}
@*<span class="red">Test</span>*@

@if (Model.Count > 0)
{
    <h2 class="text-center jumbotron">Dernier article</h2>
    <hr />
    <h3 class="text-center">@Html.ActionLink(mostRecent.Theme, "ReadArticle", "Article", new { myId = mostRecent.Id }, null)</h3>
    <p class="text-center">
        <em>
            Posté par @mostRecent.Author<br />
            Le @mostRecent.CreationDate
        </em>
    </p>

}
else
{
    <h2 class="text-center">Il n'y a pas d'article pour l'instant.</h2>
}


