@using WikY.Models

@model List<Article>

@if (!string.IsNullOrWhiteSpace((string)ViewBag.Choice))
{
    if (Model.Count > 0)
    {

        <h2 class="text-center jumbotron"><strong>Résultat de la recherche pour "@ViewBag.Choice"</strong></h2>

        foreach (Article art in Model.OrderByDescending(a => a.CreationDate))
        {
            <hr />
            <h3 class="text-center">@Html.ActionLink(art.Theme, "ReadArticle", "Article", new { myId = art.Id }, null)</h3>
            <p class="text-center">
                <em>
                    Posté par @art.Author<br />
                    Le @art.CreationDate
                </em>
            </p>
        }
    }
    else
    {
        <h2 class="text-center"><strong>Aucun résultat trouvé pour "@ViewBag.Choice"</strong></h2>
    }
}
